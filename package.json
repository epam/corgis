{
    "name": "new-corgi",
    "version": "0.1.0",
    "private": true,
    "homepage": "/corgis/",
    "scripts": {
        "build": "npm run build:contract && npm run build:web",
        "build:contract": "node asconfig.js",
        "test:contract": "asp",
        "build:web": "parcel build src/index.html --public-url ./",
        "dev:deploy:contract": "near dev-deploy --init",
        "deploy:contract": "near deploy",
        "deploy:web": "gh-pages -d dist -b ghpages",
        "deploy": "npm run build && npm run deploy:contract && npm run deploy:web",
        "dev:start": "npm run build:contract && npm run dev:deploy:contract",
        "prestart": "npm run build:contract && npm run deploy:contract",
        "start": "parcel src/index.html",
        "dev": "nodemon --watch assembly -e ts --exec \"npm run dev:start && npm run start\"",
        "test": "asp && npm run build:contract && jest test --runInBand",
        "lint": "eslint --ext js,jsx src",
        "lint:fix": "npm run lint -- --fix",
        "lint:fix:dry": "npm run lint -- --fix-dry-run"
    },
    "dependencies": {
        "@babel/runtime": "^7.10.4",
        "big.js": "^5.2.2",
        "classnames": "^2.2.6",
        "gh-pages": "^3.1.0",
        "near-api-js": "^0.25.1",
        "project-name-generator": "^2.1.7",
        "prop-types": "^15.7.2",
        "randomcolor": "^0.5.4",
        "react": "^17.0.1",
        "react-copy-to-clipboard": "5.0.3",
        "react-dom": "^17.0.1",
        "react-icons": "^4.1.0",
        "react-router-dom": "5.2.0",
        "react-scripts": "4.0.1",
        "regenerator-runtime": "^0.13.5",
        "tinycolor2": "^1.4.1"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.10.4",
        "@babel/preset-react": "^7.12.10",
        "assemblyscript": "^0.9.4",
        "babel-jest": "^26.0.0",
        "eslint": "^7.19.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx": "^0.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "jest": "^26.0.1",
        "jest-environment-node": "^26.0.0",
        "near-sdk-as": "^0.3.1",
        "near-shell": "^0.23.0",
        "node-sass": "^5.0.0",
        "nodemon": "^2.0.3",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.2.1",
        "react-test-renderer": "^17.0.1",
        "sass-loader": "^11.0.1"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            [
                "@babel/plugin-transform-runtime",
                {
                    "absoluteRuntime": false,
                    "corejs": false,
                    "helpers": true,
                    "regenerator": true,
                    "useESModules": false,
                    "version": "7.0.0-beta.0"
                }
            ]
        ]
    },
    "babelrc": {
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "browsers": [
                            "last 2 Chrome versions"
                        ]
                    }
                }
            ]
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
            "\\.(css|less)$": "<rootDir>/src/__mocks__/fileMock.js"
        },
        "setupFiles": [
            "<rootDir>/src/jest.init.js"
        ],
        "testEnvironment": "near-shell/test_environment",
        "testPathIgnorePatterns": [
            "<rootDir>/assembly/",
            "<rootDir>/node_modules/"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 Chrome versions",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
